<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cvMascota"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/borde"
        >

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="@dimen/fotoMascota"
            android:layout_height="@dimen/fotoMascota"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borde"

            >

            <ImageButton
                android:id="@+id/ibLike"
                android:layout_width="@dimen/infoMascota"
                android:layout_height="@dimen/infoMascota"
                android:src="@drawable/dog_bone_48"
                android:layout_gravity="left"
                />


            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text =" Nombre de Mascota"
                android:textSize="@dimen/sizeTexto"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvPuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="@dimen/sizeTexto"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/ivHueso"
                android:layout_width="@dimen/infoMascota"
                android:layout_height="@dimen/infoMascota"
                android:src="@drawable/dog_bone_s_48"
                android:layout_gravity="right"
                />


        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>